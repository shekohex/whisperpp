<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Background"
    android:id="@+id/keyboard_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:clipToPadding="false"
    android:paddingStart="12dp"
    android:paddingTop="6dp"
    android:paddingEnd="12dp"
    android:paddingBottom="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/keyboard_bar"
        style="@style/KeyboardBarCard"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="6dp"
            android:paddingEnd="6dp">

            <LinearLayout
                android:id="@+id/left_cluster"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/language_chip"
                    style="@style/KeyboardLanguageChip"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    app:contentPaddingBottom="0dp"
                    app:contentPaddingLeft="10dp"
                    app:contentPaddingRight="10dp"
                    app:contentPaddingTop="0dp">

                    <TextView
                        android:id="@+id/label_language"
                        style="@style/KeyboardLanguageText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/language_auto_label" />
                </com.google.android.material.card.MaterialCardView>

                <ImageButton
                    android:id="@+id/btn_settings"
                    style="@style/KeyboardIconButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:contentDescription="@string/btn_settings_hint"
                    android:src="@drawable/ic_settings" />

                <ImageButton
                    android:id="@+id/btn_previous_ime"
                    style="@style/KeyboardIconButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@string/btn_previous_ime_hint"
                    android:src="@drawable/ic_keyboard" />

                <ImageButton
                    android:id="@+id/btn_backspace"
                    style="@style/KeyboardIconButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:contentDescription="@string/backspace_button_hint"
                    android:src="@drawable/ic_backspace" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/status_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/right_cluster"
                app:layout_constraintStart_toEndOf="@+id/left_cluster"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/label_status"
                    style="@style/KeyboardStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/input_ready" />

                <LinearLayout
                    android:id="@+id/voice_wave"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <View
                        android:id="@+id/voice_wave_bar_0"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginHorizontal="2dp"
                        android:background="@drawable/voice_wave_bar" />

                    <View
                        android:id="@+id/voice_wave_bar_1"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginHorizontal="2dp"
                        android:background="@drawable/voice_wave_bar" />

                    <View
                        android:id="@+id/voice_wave_bar_2"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginHorizontal="2dp"
                        android:background="@drawable/voice_wave_bar" />

                    <View
                        android:id="@+id/voice_wave_bar_3"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginHorizontal="2dp"
                        android:background="@drawable/voice_wave_bar" />

                    <View
                        android:id="@+id/voice_wave_bar_4"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginHorizontal="2dp"
                        android:background="@drawable/voice_wave_bar" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/right_cluster"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/btn_send"
                    style="@style/KeyboardIconButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@string/start_transcribing"
                    android:src="@drawable/ic_send"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btn_cancel"
                    style="@style/KeyboardIconButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_delete_forever"
                    android:visibility="invisible" />

                <FrameLayout
                    android:id="@+id/btn_mic_frame"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="2dp">

                    <ImageButton
                        android:id="@+id/btn_mic"
                        style="@style/KeyboardMicButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/start_speech_to_text"
                        android:src="@drawable/ic_mic" />

                    <ProgressBar
                        android:id="@+id/pb_waiting_icon"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:focusable="false"
                        android:visibility="invisible" />
                </FrameLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/keyboard_handle"
        style="@style/KeyboardHandle"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyboard_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>

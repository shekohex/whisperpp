<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/SettingsTopBar"
        android:id="@+id/settings_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/RegularText"
            android:id="@+id/settings_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="@string/whisper_to_input_settings_title"
            android:textSize="24sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_settings_apply"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_settings_apply"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/settings_btn_apply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_top_bar">

        <LinearLayout
            android:id="@+id/settings_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="48dp">

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_speech_to_text_backend"
                    style="@style/SettingsLabel"
                    android:text="@string/settings_speech_to_text_backend" />
                <TextView
                    android:id="@+id/description_speech_to_text_backend"
                    style="@style/SettingsDescription"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_speech_to_text_backend_desc" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsSpinner"
                    android:layout_marginTop="12dp">
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/spinner_speech_to_text_backend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        app:simpleItems="@array/settings_speech_to_text_backend_array" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_endpoint"
                    style="@style/SettingsLabel"
                    android:text="@string/settings_endpoint" />
                <TextView
                    android:id="@+id/description_endpoint"
                    style="@style/SettingsDescription"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_endpoint_desc" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsField"
                    android:layout_marginTop="12dp"
                    android:hint="@string/settings_endpoint_hint">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/field_endpoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_api_key"
                    style="@style/SettingsLabel"
                    android:text="@string/settings_api_key" />
                <TextView
                    android:id="@+id/description_api_key"
                    style="@style/SettingsDescription"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_api_key_desc" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsField"
                    android:layout_marginTop="12dp"
                    android:hint="@string/settings_api_key_hint">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/field_api_key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_model"
                    style="@style/SettingsLabel"
                    android:text="@string/settings_model" />
                <TextView
                    android:id="@+id/description_model"
                    style="@style/SettingsDescription"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_model_desc" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsField"
                    android:layout_marginTop="12dp"
                    android:hint="@string/settings_model_hint">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/field_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_language_code"
                    style="@style/SettingsLabel"
                    android:text="@string/settings_language_code" />
                <TextView
                    android:id="@+id/description_language_code"
                    style="@style/SettingsDescription"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_language_code_desc" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsField"
                    android:layout_marginTop="12dp"
                    android:hint="@string/settings_language_code_hint">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/field_language_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_timeout"
                    style="@style/SettingsLabel"
                    android:text="@string/settings_timeout" />
                <TextView
                    android:id="@+id/description_timeout"
                    style="@style/SettingsDescription"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_timeout_desc" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_timeout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:valueFrom="1000"
                    android:valueTo="60000"
                    android:stepSize="1000" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsField"
                    android:layout_marginTop="4dp"
                    android:hint="@string/settings_timeout_hint">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/field_timeout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:id="@+id/container_prompt"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/label_prompt"
                        style="@style/SettingsLabel"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="@string/settings_prompt" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_prompt_help"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:icon="@drawable/ic_help" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/description_prompt"
                    style="@style/SettingsDescription"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_prompt_desc" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsField"
                    android:layout_marginTop="12dp"
                    android:hint="@string/settings_prompt_hint">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/field_prompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:minLines="3"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_use_context"
                            style="@style/SettingsLabel"
                            android:text="@string/settings_use_context" />
                        <TextView
                            android:id="@+id/description_use_context"
                            style="@style/SettingsDescription"
                            android:layout_marginTop="2dp"
                            android:text="@string/settings_use_context_desc" />
                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_use_context"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_auto_recording_start"
                        style="@style/SettingsLabel"
                        android:text="@string/settings_auto_recording_start" />
                    <TextView
                        android:id="@+id/description_auto_recording_start"
                        style="@style/SettingsDescription"
                        android:layout_marginTop="2dp"
                        android:text="@string/settings_auto_recording_start_desc" />
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_auto_recording_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_auto_switch_back"
                        style="@style/SettingsLabel"
                        android:text="@string/settings_auto_switch_back" />
                    <TextView
                        android:id="@+id/description_auto_switch_back"
                        style="@style/SettingsDescription"
                        android:layout_marginTop="2dp"
                        android:text="@string/settings_auto_switch_back_desc" />
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_auto_switch_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_confirm_cancel"
                        style="@style/SettingsLabel"
                        android:text="@string/settings_confirm_cancel" />
                    <TextView
                        android:id="@+id/description_confirm_cancel"
                        style="@style/SettingsDescription"
                        android:layout_marginTop="2dp"
                        android:text="@string/settings_confirm_cancel_desc" />
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_confirm_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_postprocessing"
                    style="@style/SettingsLabel"
                    android:text="@string/settings_postprocessing" />
                <TextView
                    android:id="@+id/description_postprocessing"
                    style="@style/SettingsDescription"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_postprocessing_desc" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsSpinner"
                    android:layout_marginTop="12dp">
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/spinner_postprocessing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        app:simpleItems="@array/settings_postprocessing_array" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_add_trailing_space"
                        style="@style/SettingsLabel"
                        android:text="@string/settings_add_trailing_space" />
                    <TextView
                        android:id="@+id/description_add_trailing_space"
                        style="@style/SettingsDescription"
                        android:layout_marginTop="2dp"
                        android:text="@string/settings_add_trailing_space_desc" />
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_add_trailing_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Smart Fix Section -->
            <TextView
                style="@style/SettingsLabel"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/settings_smart_fix_title"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/SettingsLabel"
                        android:text="@string/settings_smart_fix_enabled" />
                    <TextView
                        style="@style/SettingsDescription"
                        android:text="@string/settings_smart_fix_enabled_desc" />
                </LinearLayout>
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_smart_fix_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">
                <TextView
                    style="@style/SettingsLabel"
                    android:text="@string/settings_smart_fix_backend" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsSpinner"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/spinner_smart_fix_backend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        app:simpleItems="@array/settings_smart_fix_backend_array" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">
                <TextView
                    style="@style/SettingsLabel"
                    android:text="@string/settings_smart_fix_endpoint" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsField"
                    android:layout_marginTop="8dp"
                    android:hint="@string/settings_smart_fix_endpoint_hint">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/field_smart_fix_endpoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">
                <TextView
                    style="@style/SettingsLabel"
                    android:text="@string/settings_smart_fix_api_key" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsField"
                    android:layout_marginTop="8dp"
                    android:hint="@string/settings_api_key_hint">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/field_smart_fix_api_key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">
                <TextView
                    style="@style/SettingsLabel"
                    android:text="@string/settings_smart_fix_model" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsField"
                    android:layout_marginTop="8dp"
                    android:hint="@string/settings_smart_fix_model_hint">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/field_smart_fix_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">
                <TextView
                    style="@style/SettingsLabel"
                    android:text="@string/settings_smart_fix_temperature" />
                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_smart_fix_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:stepSize="0.1" />
            </LinearLayout>

            <LinearLayout
                style="@style/SettingsItemContainer"
                android:orientation="vertical">
                <TextView
                    style="@style/SettingsLabel"
                    android:text="@string/settings_smart_fix_prompt" />
                <TextView
                    style="@style/SettingsDescription"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_smart_fix_prompt_desc" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/SettingsField"
                    android:layout_marginTop="12dp"
                    android:hint="@string/settings_smart_fix_prompt_hint">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/field_smart_fix_prompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:minLines="5"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
